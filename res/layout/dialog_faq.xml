<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/background_faq">

    <EditText
        android:id="@+id/editText_faq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:padding="5dip"
        android:background="@null"
        android:hint="@string/ds_faq_hint"
        android:minHeight="150dip" >
        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_below="@+id/editText_faq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_faq_success"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/ds_faq_success" />

        <Button
            android:id="@+id/button_faq_cancel"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/ds_faq_cancel" />
    </LinearLayout>

</RelativeLayout>